#!/bin/sh
set -e

[ -d /dev/net ] ||
    mkdir -p /dev/net
[ -c /dev/net/tun ] ||
    mknod /dev/net/tun c 10 200

cd /etc/openvpn

if [ -n "${OVPN_DEBUG}" ]
  then
    TCPSTATUS="/tmp/openvpn-status-1397.log"
    UDPSTATUS="/tmp/openvpn-status-1297.log"
    TCPLOG="/tmp/tcp1397.log"
    UDPLOG="/tmp/udp1297.log"
    VERBOSE="3"
  else
    TCPSTATUS="/dev/null"
    UDPSTATUS="/dev/null"
    TCPLOG="/dev/null"
    UDPLOG="/dev/null"
    VERBOSE="0"
fi

cat >tcp1397.conf <<EOF
port 1397
proto tcp-server
dev tun1397
dh none
ca ca.crt
cert server.crt
key server.key
server 10.9.0.0 255.255.0.0
push "persist-key"
push "persist-tun"
push "redirect-gateway def1 bypass-dhcp"
push "dhcp-option DNS $DNS_HOST1"
push "dhcp-option DNS $DNS_HOST2"
duplicate-cn
keepalive 10 30
cipher AES-128-GCM
ncp-ciphers AES-128-GCM
user nobody
group nogroup
persist-key
persist-tun
status $TCPSTATUS
plugin /usr/lib/openvpn/radiusplugin.so /etc/openvpn/radius1397.conf
username-as-common-name
verify-client-cert none
log $TCPLOG
suppress-timestamps
verb $VERBOSE
mute 10
EOF

cat >radius1397.conf <<EOF
NAS-Identifier=$NAS_ID
Service-Type=5
Framed-Protocol=1
NAS-Port-Type=5
NAS-IP-Address=$NAS_IP
OpenVPNConfig=/etc/openvpn/tcp1397.conf
subnet=255.255.0.0
overwriteccfiles=true
nonfatalaccounting=true
server
{
    acctport=$RADIUS_ACCT_PORT
    authport=$RADIUS_AUTH_PORT
    name=$RADIUS_HOST
    retry=3
    wait=3
    sharedsecret=$RADIUS_KEY
}
EOF

cat >udp1297.conf <<EOF
port 1297
proto udp
dev tun1297
dh none
ca ca.crt
cert server.crt
key server.key
server 10.8.0.0 255.255.0.0
push "persist-key"
push "persist-tun"
push "redirect-gateway def1 bypass-dhcp"
push "dhcp-option DNS $DNS_HOST1"
push "dhcp-option DNS $DNS_HOST2"
duplicate-cn
cipher AES-128-GCM
ncp-ciphers AES-128-GCM
keepalive 10 30
fast-io
reneg-sec 0
tun-mtu 1500
txqueuelen 1000
mssfix 1400
sndbuf 0
rcvbuf 0
user nobody
group nogroup
persist-key
persist-tun
status $UDPSTATUS
plugin /usr/lib/openvpn/radiusplugin.so /etc/openvpn/radius1297.conf
username-as-common-name
verify-client-cert none
log $UDPLOG
suppress-timestamps
verb $VERBOSE
mute 10
explicit-exit-notify 1
EOF

cat >radius1297.conf <<EOF
NAS-Identifier=$NAS_ID
Service-Type=5
Framed-Protocol=1
NAS-Port-Type=5
NAS-IP-Address=$NAS_IP
OpenVPNConfig=/etc/openvpn/udp1297.conf
subnet=255.255.0.0
overwriteccfiles=true
nonfatalaccounting=true
server
{
    acctport=$RADIUS_ACCT_PORT
    authport=$RADIUS_AUTH_PORT
    name=$RADIUS_HOST
    retry=3
    wait=3
    sharedsecret=$RADIUS_KEY
}
EOF

iptables -t nat -A POSTROUTING -s 10.8.0.0/16 -o eth0 -j MASQUERADE
iptables -t nat -A POSTROUTING -s 10.9.0.0/16 -o eth0 -j MASQUERADE

if [ -n "${OVPN_DEBUG}" ]
  then
    touch $TCPLOG $UDPLOG
    while true ; do openvpn tcp1397.conf ; done >> $TCPLOG &
    while true ; do openvpn udp1297.conf ; done >> $UDPLOG &
    tail -f $TCPLOG $UDPLOG
  else
    while true ; do openvpn tcp1397.conf ; done &
    while true ; do openvpn udp1297.conf ; done
fi
